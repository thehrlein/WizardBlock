<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="toolbarViewModel"
            type="com.tobiashehrlein.tobiswizardblock.core.presentation.general.BaseToolbarViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/base_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/status_bar_background"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="?colorPrimaryDark"/>

        <com.tobiashehrlein.tobiswizardblock.feature.common.ui.views.BaseToolbar
            android:id="@+id/base_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:onToolbarButtonClick="@{() -> toolbarViewModel.toolBarButtonClicked()}"
            app:toolbarButton="@{toolbarViewModel.toolbarButton}"
            app:toolbarTitle="@{toolbarViewModel.toolbarTitle}" />

        <FrameLayout
            android:id="@+id/base_content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</layout>
