<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.tobiashehrlein.tobiswizardblock">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/wizard"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".GameInfoSlideActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".CoverPageActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".StartActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".GameSettings"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".PlayerSettings"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Tipps"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".LastGames"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".GameBlock"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".HighScore"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".Settings"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>