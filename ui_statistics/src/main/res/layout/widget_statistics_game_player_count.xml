<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/statistics_player_count_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_4"
        android:background="@drawable/wb_background_border_rounded"
        android:elevation="?elevationMedium"
        android:padding="@dimen/space_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/statistics_player_count_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/statistics_player_count_headline"
            android:textAppearance="?textAppearanceSubtitle1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/statistics_player_count_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/statistics_player_count_title" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/statistics_player_count_chart"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/space_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/statistics_player_count_divider" />

        <TextView
            android:id="@+id/statistics_player_count_chart_label_y_axis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/statistics_player_count_frequency"
            android:textAppearance="?textAppearanceCaption"
            android:textSize="@dimen/chart_axis_label_text_size"
            app:layout_constraintTop_toTopOf="@id/statistics_player_count_chart"
            app:layout_constraintStart_toStartOf="@id/statistics_player_count_chart" />

        <TextView
            android:id="@+id/statistics_player_count_chart_label_x_axis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/statistics_player_count_x_axis_label"
            android:textAppearance="?textAppearanceCaption"
            android:textSize="@dimen/chart_axis_label_text_size"
            app:layout_constraintBottom_toBottomOf="@id/statistics_player_count_chart"
            app:layout_constraintEnd_toEndOf="@id/statistics_player_count_chart" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
