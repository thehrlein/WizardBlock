<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Alpha -->
    <attr name="alphaEmphasisHigh" format="float"/>
    <attr name="alphaEmphasisMedium" format="float"/>
    <attr name="alphaEmphasisDisabled" format="float"/>

    <!-- Elevation -->
    <attr name="elevationHigh" format="float" />
    <attr name="elevationMedium" format="float" />
    <attr name="elevationLow" format="float" />

    <!--Common attributes-->
    <attr name="colorBackground" format="color" />
    <attr name="colorFillColor" format="color"/>
    <attr name="colorStrokeColor" format="color"/>
    <attr name="textInputStyleOutlined" format="reference" />
    <attr name="textInputStyleDropdown" format="reference" />
    <attr name="textInputStyleFilled" format="reference" />
    <attr name="textInputStyleOutlinedExposedDropdown" format="reference" />
    <attr name="textAppearanceError" format="reference" />
    <attr name="dividerColor" format="color" />
    <attr name="dividerHeight" format="reference" />

    <!-- Text -->
    <attr name="textColor" format="color"/>
    <attr name="textColorDisabled" format="color"/>

    <!-- Button -->
    <attr name="buttonSecondary" format="reference"/>

    <!-- Toolbar -->
    <attr name="textAppearanceToolbarTitle" format="reference" />

    <!-- Custom views attributes -->
    <declare-styleable name="BaseToolbar">
        <attr name="android:gravity" />
        <attr name="android:buttonTint" />
        <attr name="android:maxLines"/>
        <attr name="android:ellipsize" />
    </declare-styleable>

</resources>